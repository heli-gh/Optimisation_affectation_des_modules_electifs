\end_layout

\begin_layout Plain Layout

	hist(S[,i], col="cyan", main = Titre, freq=FALSE, cex.main=1.6, cex.axis=1.5,xlim=c
(0,2), ylim=c(0,4))   
\end_layout

\begin_layout Plain Layout

	lines(y, df(y, n-1, n-1), lwd=2) 
\end_layout

\begin_layout Plain Layout

}
