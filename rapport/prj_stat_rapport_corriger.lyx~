y = seq(-4 , 4,0.01) 
\end_layout

\begin_layout Plain Layout

nval = c(50, 100,200,500,1000) 
\end_layout

\begin_layout Plain Layout

par(mfrow=c(2,3)) 
\end_layout

\begin_layout Plain Layout

