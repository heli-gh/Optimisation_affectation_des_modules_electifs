\begin_layout Standard
\begin_inset listings
lstparams "language=R,breaklines=true"
inline false
status open

\begin_layout Plain Layout

# Nettoyage de l’espace de travail 
\end_layout

\begin_layout Plain Layout

rm(list=ls()) 
\end_layout

\begin_layout Plain Layout

# Instruction pour que tout le monde ait le m^eme al′ea de d′epart 
\end_layout

\begin_layout Plain Layout

#set.seed(125) 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

B = 400 ; N = 1000 
\end_layout

\begin_layout Plain Layout

nval = c(50, 100,200,500,1000)
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

data1 <- matrix(NA, ncol=B, nrow=N) 
\end_layout

\begin_layout Plain Layout

for(b in 1:B){   
\end_layout

\begin_layout Plain Layout

	data1[,b] = rnorm(N,10,6) #Pour les variance differant, on change le 3eme
 variable et pour loi de Student on utilise rt(N,ddl)
\end_layout

\begin_layout Plain Layout

} 
\end_layout

\begin_layout Plain Layout

P = matrix(NA,ncol = length(nval), nrow=B) 
\end_layout

\begin_layout Plain Layout

for (b in 1:B){   
\end_layout

\begin_layout Plain Layout

	for (j in 1:length(nval)){     
\end_layout

\begin_layout Plain Layout

		n = nval[j]     
\end_layout

\begin_layout Plain Layout

		res = 0;     
\end_layout

\begin_layout Plain Layout

		for (k in 1:n){       
\end_layout

\begin_layout Plain Layout

			res = res + (data1[k,b]-mean(data1[1:n,b]))*(data1[k,b]-mean(data1[1:n,b]))
     
\end_layout

\begin_layout Plain Layout

		}     
\end_layout

\begin_layout Plain Layout

		Q[b,j] = res/(n-1)  
\end_layout

\begin_layout Plain Layout

	} 
\end_layout

\begin_layout Plain Layout

}
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

data2 <- matrix(NA, ncol=B, nrow=N) 
\end_layout

\begin_layout Plain Layout

for(b in 1:B){   
\end_layout

\begin_layout Plain Layout

	data2[,b] = rnorm(N,10,6) 
\end_layout

\begin_layout Plain Layout

} 
\end_layout

\begin_layout Plain Layout

Q = matrix(NA,ncol = length(nval), nrow=B) 
\end_layout

\begin_layout Plain Layout

for (b in 1:B){   
\end_layout

\begin_layout Plain Layout

	for (j in 1:length(nval)){     
\end_layout

\begin_layout Plain Layout

		n = nval[j]     
\end_layout

\begin_layout Plain Layout

		res = 0;     
\end_layout

\begin_layout Plain Layout

		for (k in 1:n){       
\end_layout

\begin_layout Plain Layout

		res = res + (data2[k,b]-mean(data2[1:n,b]))*(data2[k,b]-mean(data2[1:n,b]))
     
\end_layout

\begin_layout Plain Layout

		}     
\end_layout

\begin_layout Plain Layout

	P[b,j] = res/(n-1)   
\end_layout

\begin_layout Plain Layout

	} 
\end_layout

\begin_layout Plain Layout

}
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

" Pour Box-Muller mu = 10 sigma = 6
\end_layout

\begin_layout Plain Layout

data1 <- matrix(NA, ncol=B, nrow=N) 
\end_layout

\begin_layout Plain Layout

data2 <- matrix(NA, ncol=B, nrow=N) 
\end_layout

\begin_layout Plain Layout

for(b in 1:B){   
\end_layout

\begin_layout Plain Layout

	U1 = runif(N)   
\end_layout

\begin_layout Plain Layout

	U2 = runif(N)   
\end_layout

\begin_layout Plain Layout

	r = sqrt(-2*log(U2))   
\end_layout

\begin_layout Plain Layout

	theta = 2*pi*U1   
\end_layout

\begin_layout Plain Layout

	P1 = r*cos(theta)   
\end_layout

\begin_layout Plain Layout

	Q1 = r*sin(theta)   
\end_layout

\begin_layout Plain Layout

	P = sigma*P1 + mu   
\end_layout

\begin_layout Plain Layout

	Q = sigma*Q1 + mu   
\end_layout

\begin_layout Plain Layout

	data1[,b] = P   
\end_layout

\begin_layout Plain Layout

	data2[,b] = Q }
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

P = matrix(NA,ncol = length(nval), nrow=B) 
\end_layout

\begin_layout Plain Layout

for (b in 1:B){   
\end_layout

\begin_layout Plain Layout

	for (j in 1:length(nval)){     
\end_layout

\begin_layout Plain Layout

		n = nval[j]     
\end_layout

\begin_layout Plain Layout

		res = 0;     
\end_layout

\begin_layout Plain Layout

		for (k in 1:n){     
\end_layout

\begin_layout Plain Layout

			res = res + (data1[k,b]-mean(data1[1:n,b]))*(data1[k,b]-mean(data1[1:n,b]))
     
\end_layout

\begin_layout Plain Layout

		}     
\end_layout

\begin_layout Plain Layout

		P[b,j] = res/(n-1)     
\end_layout

\begin_layout Plain Layout

	} 
\end_layout

\begin_layout Plain Layout

}
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

Q = matrix(NA,ncol = length(nval), nrow=B) 
\end_layout

\begin_layout Plain Layout

for (b in 1:B){   
\end_layout

\begin_layout Plain Layout

	for (j in 1:length(nval)){     
\end_layout

\begin_layout Plain Layout

		n = nval[j]     
\end_layout

\begin_layout Plain Layout

		res = 0;     
\end_layout

\begin_layout Plain Layout

		for (k in 1:n){     
\end_layout

\begin_layout Plain Layout

			res = res + (data2[k,b]-mean(data2[1:n,b]))*(data2[k,b]-mean(data2[1:n,b]))
     
\end_layout

\begin_layout Plain Layout

		}    
\end_layout

\begin_layout Plain Layout

	Q[b,j] = res/(n-1)   
\end_layout

\begin_layout Plain Layout

	} 
\end_layout

\begin_layout Plain Layout

}
\end_layout

\begin_layout Plain Layout

" 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

Pourcentage <- matrix(NA,ncol=1,nrow=length(nval)) 
\end_layout

\begin_layout Plain Layout

for (j in 1:length(nval)){   
\end_layout

\begin_layout Plain Layout

	n = nval[j]   
\end_layout

\begin_layout Plain Layout

	compt = 0;   
\end_layout

\begin_layout Plain Layout

	for(c in 1:B){     
\end_layout

\begin_layout Plain Layout

		res=var.test(data1[1:n,c],data2[1:n,c])     
\end_layout

\begin_layout Plain Layout

		if(res$p.value<=0.05){compt = compt+1}   
\end_layout

\begin_layout Plain Layout

	}   
\end_layout

\begin_layout Plain Layout

	Pourcentage[j,1]=compt/400 
\end_layout

\begin_layout Plain Layout

}
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

S = matrix(NA,ncol = length(nval), nrow=B) 
\end_layout

\begin_layout Plain Layout

for (s in 1:B){   
\end_layout

\begin_layout Plain Layout

	for (j in 1:length(nval)){     
\end_layout

\begin_layout Plain Layout

		S[s,j] = P[s,j]/Q[s,j]   
\end_layout

\begin_layout Plain Layout

	} 
\end_layout

\begin_layout Plain Layout

}
\end_layout

\begin_layout Plain Layout

\end_layout

